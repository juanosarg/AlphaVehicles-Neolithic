<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="BaseBullet">
		<defName>AV_Classique_MainTurret_Bullet</defName>
		<label>steel slug</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet_Big</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.4</drawSize>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>55</damageAmountBase>
			<speed>120</speed>
		</projectile>
	</ThingDef>
	<Vehicles.VehicleTurretDef Name="TankMainTurret" ParentName="VehicleTurretBase">
		<defName>AV_Classique_MainTurret</defName>
		<label>classique cannon</label>
		<description>A cannon capable of firing heavy steel slugs. Usually mounted on Classique tanks. Needs to be reloaded with steel. Can’t fire whilst moving. Has a very large range, but can’t target enemies too close.</description>
		<turretType>Rotatable</turretType>
		<shotSound>Shot_TurretSniper</shotSound>
		<reloadSound>VVE_RoadkillReloadSound</reloadSound>
		<projectile>AV_Classique_MainTurret_Bullet</projectile>
		<reloadTimer>3.4</reloadTimer>
		<warmUpTimer>4.5</warmUpTimer>
		<magazineCapacity>1</magazineCapacity>
		<chargePerAmmoCount>2</chargePerAmmoCount>
		<genericAmmo>true</genericAmmo>
		<autoSnapTargeting>false</autoSnapTargeting>
		<rotationSpeed>1.2</rotationSpeed>
		<restrictionType>Vehicles.TurretRestrictions_Stationary</restrictionType>
		<projectileOffset>2.5</projectileOffset>
		<hitFlags>IntendedTarget</hitFlags>
		<maxRange>45</maxRange>
		<minRange>8</minRange>
		<attachProjectileFlag>VVE_Tank</attachProjectileFlag>
		<recoil>
			<distanceTotal>0.45</distanceTotal>
			<distancePerTick>0.15</distancePerTick>
			<speedMultiplierPostRecoil>0.35</speedMultiplierPostRecoil>
		</recoil>
		<vehicleRecoil>
			<distanceTotal>0.1</distanceTotal>
			<distancePerTick>0.05</distancePerTick>
			<speedMultiplierPostRecoil>0.55</speedMultiplierPostRecoil>
		</vehicleRecoil>
		<fireModes>
			<li>
				<shotsPerBurst>1</shotsPerBurst>
				<ticksBetweenBursts>1</ticksBetweenBursts>
				<spreadRadius>3</spreadRadius>
				<label>Single Shot</label>
				<texPath>UI/Gizmos/FireRate_Single</texPath>
			</li>
		</fireModes>
		<graphicData>
			<texPath>Things/Vehicles/Land/Tier1/Classique/AV_Renault_Turret/AV_Renault_Turret</texPath>
			<graphicClass>Vehicles.Graphic_Turret</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>(4, 4)</drawSize>
		</graphicData>
		<ammunition>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</ammunition>
		<motes>
			<li>
				<cycles>1</cycles>
				<moteDef>Mote_CannonPlume</moteDef>
				<animationType>Reset</animationType>
			</li>
		</motes>
	</Vehicles.VehicleTurretDef>
</Defs>